<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ShowAugmentList"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#4B4A4C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_augment"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/aatrox"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/aug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_augment"
            android:text="Augment_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aug_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_augment"
            android:paddingTop="20dp"
            android:text="Augment_description"
            android:textColor="@color/material_dynamic_neutral80"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>